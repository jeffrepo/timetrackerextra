<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="tipo_cliente"/>
                </xpath>
            </field>
        </record>
        
        <record id="timetracker_res_partner_view_form_property_inherit" model="ir.ui.view">
            <field name="name">timetracker.res.partner.property.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="sale.res_partner_view_form_property_inherit"/>
            <!-- <field name="groups_id" eval="[(4, ref('account.group_account_manager'))]"/> -->
            <!-- <field name="groups_id" eval="[(4, ref('timetracker.group_timetracker_forma_pago'))]"/> -->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_payment_term_id']" position="attributes">
                    <attribute name="readonly">user_has_group_timetracker_payment</attribute>
                    <!-- <attribute name="attrs">{'readonly': [('group_id', 'not in', [ref('timetracker.group_timetracker_forma_pago')])]}</attribute> -->
                </xpath>
            </field>
        </record>
        
        
    </data>
</odoo>
